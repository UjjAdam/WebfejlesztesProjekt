@page "/Identity/Account/LoginDebug"
@namespace DestinyLoadoutManager.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Login Debug";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card mt-5">
            <div class="card-body">
                <h1>Login Debug Test</h1>
                
                <form method="post" asp-page="Login">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group mb-3">
                        <label class="form-label">Felhasználónév</label>
                        <input name="Input.UserName" class="form-control" placeholder="test" required />
                    </div>
                    
                    <div class="form-group mb-3">
                        <label class="form-label">Jelszó</label>
                        <input type="password" name="Input.Password" class="form-control" placeholder="test" required />
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
                
                <hr>
                <p>Token Present: @(!string.IsNullOrEmpty(ViewData["csrf"] as string))</p>
            </div>
        </div>
    </div>
</div>
