@page "/Identity/Account/Login"
@namespace DestinyLoadoutManager.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card mt-5">
            <div class="card-body">
                <h1>@ViewData["Title"]</h1>

                <section>
                    <form method="post" id="loginForm">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                                <strong>Bejelentkezési hiba!</strong>
                                <div asp-validation-summary="All" class="mb-0"></div>
                            </div>
                        }
                        
                        <div class="form-group mb-3">
                            <label for="Input_UserName" class="form-label">Felhasználónév</label>
                            <input id="Input_UserName" name="Input.UserName" type="text" class="form-control" placeholder="Adja meg a felhasználónevet" autocomplete="username" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Input_Password" class="form-label">Jelszó</label>
                            <input id="Input_Password" name="Input.Password" type="password" class="form-control" placeholder="Adja meg a jelszavát" autocomplete="current-password" />
                        </div>
                        <div class="form-group">
                            <button id="login-submit" type="submit" class="btn btn-primary w-100">
                                <span id="loginText">Bejelentkezés</span>
                                <span id="loginSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            </button>
                        </div>
                    </form>
                </section>

                <div class="mt-3">
                    <p>
                        <a href="/Identity/Account/Register" class="btn btn-link">Regisztráció új felhasználóként</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
