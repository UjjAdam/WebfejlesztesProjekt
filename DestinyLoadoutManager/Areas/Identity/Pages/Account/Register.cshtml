@page "/Identity/Account/Register"
@namespace DestinyLoadoutManager.Areas.Identity.Pages.Account
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card mt-5">
            <div class="card-body">
                <h1>@ViewData["Title"]</h1>

                <form method="post" id="registerForm">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>Regisztrációs hiba!</strong>
                            <div asp-validation-summary="All" class="mb-0"></div>
                        </div>
                    }
                    
                    <div class="form-group mb-3">
                        <label for="Input_UserName" class="form-label">Felhasználónév</label>
                        <input id="Input_UserName" name="Input.UserName" type="text" class="form-control" placeholder="Válasszon felhasználónevet" autocomplete="username" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="Input_Email" class="form-label">Email cím</label>
                        <input id="Input_Email" name="Input.Email" type="email" class="form-control" placeholder="pelda@email.com" autocomplete="email" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="Input_Password" class="form-label">Jelszó</label>
                        <input id="Input_Password" name="Input.Password" type="password" class="form-control" placeholder="Minimum 6 karakter" autocomplete="new-password" />
                        <small class="form-text text-muted">Legalább 6 karakter hosszú jelszó</small>
                    </div>
                    <button type="submit" class="btn btn-primary w-100" id="register-submit">
                        <span id="registerText">Regisztráció</span>
                        <span id="registerSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </form>

                <div class="mt-3">
                    <p>
                        <a href="/Identity/Account/Login" class="btn btn-link">Van már fiókja? Bejelentkezés</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
