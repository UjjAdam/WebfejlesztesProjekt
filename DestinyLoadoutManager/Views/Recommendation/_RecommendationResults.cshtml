@model IEnumerable<DestinyLoadoutManager.Services.LoadoutRecommendation>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        <strong>No recommendations found.</strong> You might not have any loadouts yet. <a href="/Loadout/Create">Create one now!</a>
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-success text-white d-flex align-items-center gap-2">
            <h5 class="mb-0">Recommended Loadouts</h5>
        </div>
        <div class="card-body">
            @foreach (var rec in Model.OrderByDescending(r => r.MatchScore))
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h5 class="card-title">@rec.Loadout?.Name</h5>
                                @if (!string.IsNullOrEmpty(rec.Loadout?.Description))
                                {
                                    <p class="card-text">@rec.Loadout?.Description</p>
                                }
                                <p class="text-muted">@rec.Loadout?.LoadoutWeapons?.Count weapons equipped</p>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="badge bg-primary p-3 mb-2">
                                    <h6 style="margin: 0;">Match Score</h6>
                                    <h2 style="margin: 0;">@rec.MatchScore%</h2>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <h6>Why This Loadout?</h6>
                        <ul class="mb-0">
                            @foreach (var reason in rec.MatchReasons)
                            {
                                <li>@Html.Raw(DecorateReason(reason))</li>
                            }
                        </ul>

                        <div class="mt-3">
                            <a href="/Loadout/Details/@rec.Loadout?.Id" class="btn btn-sm btn-primary">View Loadout</a>
                            <a href="/Loadout/Edit/@rec.Loadout?.Id" class="btn btn-sm btn-warning">Edit Loadout</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@functions {
    private string DecorateReason(string reason)
    {
        return reason
            .Replace("Anti-Barrier", "<img src='/icons/champions/barrier.png' class='icon-inline' alt='Anti-Barrier icon' /> Anti-Barrier")
            .Replace("Overload", "<img src='/icons/champions/overload.png' class='icon-inline' alt='Overload icon' /> Overload")
            .Replace("Unstoppable", "<img src='/icons/champions/unstoppable.png' class='icon-inline' alt='Unstoppable icon' /> Unstoppable");
    }
}
