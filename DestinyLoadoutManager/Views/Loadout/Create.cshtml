@model DestinyLoadoutManager.Models.Loadout

@{
    ViewData["Title"] = "Create Loadout";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <h1>Create New Loadout</h1>

        <form asp-action="Create">
            <div class="form-group mb-3">
                <label for="Name">Loadout Name</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="e.g., Nightfall Build" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Description">Description (optional)</label>
                <textarea class="form-control" id="Description" name="Description" rows="3" placeholder="Describe the purpose of this loadout..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Create Loadout</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
