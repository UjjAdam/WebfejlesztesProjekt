@model DestinyLoadoutManager.Models.Loadout

@{
    ViewData["Title"] = "Create Loadout";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <h1>Create New Loadout</h1>
        <p class="lead">Give your loadout a name and add weapons from the 3 slots.</p>

        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label for="Name" class="form-label">Loadout Name</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="e.g., Nightfall Build" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label for="Description" class="form-label">Description (optional)</label>
                <textarea class="form-control" id="Description" name="Description" rows="2" placeholder="Describe the purpose of this loadout..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Create Loadout</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>

        <div class="alert alert-info mt-4">
            <strong>Next:</strong> After creating your loadout, you'll be able to add weapons to the Primary, Special, and Heavy slots.
        </div>
    </div>
</div>
