@model IEnumerable<DestinyLoadoutManager.Models.Loadout>

@{
    ViewData["Title"] = "My Loadouts";
}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <h1>My Loadouts</h1>
        
        @if (Model.Any())
        {
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary">+ Create New Loadout</a>
            </div>

            <div class="row">
                @foreach (var loadout in Model)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@loadout.Name</h5>
                                @if (!string.IsNullOrEmpty(loadout.Description))
                                {
                                    <p class="card-text">@loadout.Description</p>
                                }
                                
                                @if (loadout.LoadoutWeapons.Any())
                                {
                                    <div class="mb-2">
                                        @foreach (var lw in loadout.LoadoutWeapons.OrderBy(x => x.Slot))
                                        {
                                            var elementColor = lw.Weapon?.Element switch
                                            {
                                                DestinyLoadoutManager.Models.ElementType.Solar => "warning",
                                                DestinyLoadoutManager.Models.ElementType.Arc => "info",
                                                DestinyLoadoutManager.Models.ElementType.Void => "dark",
                                                DestinyLoadoutManager.Models.ElementType.Kinetic => "secondary",
                                                _ => "light"
                                            };
                                            var elementEmoji = lw.Weapon?.Element switch
                                            {
                                                DestinyLoadoutManager.Models.ElementType.Solar => "üî•",
                                                DestinyLoadoutManager.Models.ElementType.Arc => "‚ö°",
                                                DestinyLoadoutManager.Models.ElementType.Void => "üíú",
                                                DestinyLoadoutManager.Models.ElementType.Kinetic => "‚ö™",
                                                _ => "‚ùì"
                                            };

                                            <div class="mb-1">
                                                <small>
                                                    <strong>@lw.Slot:</strong> @lw.Weapon?.Name
                                                    <span class="badge bg-@elementColor">@elementEmoji @lw.Weapon?.Element</span>
                                                    <span class="badge bg-secondary">@lw.Weapon?.Type</span>
                                                </small>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="card-text"><small class="text-muted">No weapons yet</small></p>
                                }
                            </div>
                            <div class="card-footer">
                                <a asp-action="Details" asp-route-id="@loadout.Id" class="btn btn-sm btn-info">View</a>
                                <a asp-action="Edit" asp-route-id="@loadout.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@loadout.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                You haven't created any loadouts yet. <a asp-action="Create">Create one now!</a>
            </div>
        }
    </div>
</div>
