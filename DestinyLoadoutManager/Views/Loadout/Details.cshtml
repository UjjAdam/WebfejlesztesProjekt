@model DestinyLoadoutManager.Models.Loadout

@{
    ViewData["Title"] = $"View - {Model.Name}";
}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <h1>@Model.Name</h1>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted">@Model.Description</p>
        }

        <div class="mb-3">
            <p><strong>Created:</strong> @Model.CreatedAt.ToString("g")</p>
            <p><strong>Last Updated:</strong> @Model.UpdatedAt.ToString("g")</p>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Weapons</h5>
            </div>
            <div class="card-body">
                @if (Model.LoadoutWeapons.Any())
                {
                    <div class="row">
                        @foreach (var lw in Model.LoadoutWeapons.OrderBy(x => x.Slot))
                        {
                            <div class="col-md-4 mb-3">
                                <div class="weapon-card border rounded p-3">
                                    <h6>@lw.Slot.ToString() Slot</h6>
                                    <p class="mb-1"><strong>@lw.Weapon?.Name</strong></p>
                                    <p class="mb-1">
                                        <span class="badge bg-primary">@lw.Weapon?.Type</span>
                                        <span class="badge" style="background-color: @GetElementColor(lw.Weapon?.Element ?? ElementType.Void);">@lw.Weapon?.Element</span>
                                    </p>
                                    <p class="mb-0"><small>@lw.Weapon?.AmmoType ammo</small></p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No weapons in this loadout yet.</p>
                }
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            <a asp-action="Index" class="btn btn-secondary">Back to Loadouts</a>
        </div>
    </div>
</div>

@functions {
    private string GetElementColor(DestinyLoadoutManager.Models.ElementType element)
    {
        return element switch
        {
            DestinyLoadoutManager.Models.ElementType.Arc => "#0066FF",
            DestinyLoadoutManager.Models.ElementType.Solar => "#FF6600",
            DestinyLoadoutManager.Models.ElementType.Void => "#6600CC",
            DestinyLoadoutManager.Models.ElementType.Kinetic => "#999999",
            _ => "#333333"
        };
    }
}
