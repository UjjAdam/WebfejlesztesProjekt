@using Microsoft.AspNetCore.Identity
@inject SignInManager<DestinyLoadoutManager.Models.ApplicationUser> SignInManager
@inject UserManager<DestinyLoadoutManager.Models.ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
        <button id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}
