@model IEnumerable<DestinyLoadoutManager.Models.Weapon>

@{
    ViewData["Title"] = "Weapons Catalog";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Weapons Catalog</h1>

        @if (User?.IsInRole("Admin") ?? false)
        {
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary">+ Add New Weapon (Admin)</a>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Element</th>
                        <th>Slot</th>
                        <th>Ammo Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var weapon in Model)
                    {
                        <tr>
                            <td><strong>@weapon.Name</strong></td>
                            <td>@weapon.Type</td>
                            <td>
                                <span class="badge" style="background-color: @GetElementColor(weapon.Element);">
                                    @weapon.Element
                                </span>
                            </td>
                            <td>@weapon.Slot</td>
                            <td>@weapon.AmmoType</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@weapon.Id" class="btn btn-sm btn-info">View</a>
                                @if (User?.IsInRole("Admin") ?? false)
                                {
                                    <a asp-action="Edit" asp-route-id="@weapon.Id" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@weapon.Id" class="btn btn-sm btn-danger">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    private string GetElementColor(DestinyLoadoutManager.Models.ElementType element)
    {
        return element switch
        {
            DestinyLoadoutManager.Models.ElementType.Arc => "#0066FF",
            DestinyLoadoutManager.Models.ElementType.Solar => "#FF6600",
            DestinyLoadoutManager.Models.ElementType.Void => "#6600CC",
            DestinyLoadoutManager.Models.ElementType.Kinetic => "#999999",
            _ => "#333333"
        };
    }
}
