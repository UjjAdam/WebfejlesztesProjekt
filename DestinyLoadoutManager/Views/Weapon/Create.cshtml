@model DestinyLoadoutManager.Models.Weapon

@{
    ViewData["Title"] = "Create Weapon (Admin)";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <h1>Create New Weapon</h1>

        <form asp-action="Create">
            <div class="form-group mb-3">
                <label for="Name">Weapon Name</label>
                <input type="text" class="form-control" id="Name" name="Name" required>
            </div>

            <div class="form-group mb-3">
                <label for="Type">Weapon Type</label>
                <select class="form-select" id="Type" name="Type" required>
                    <option value="">-- Select Type --</option>
                    @foreach (var type in Enum.GetValues(typeof(DestinyLoadoutManager.Models.WeaponType)))
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="Element">Element</label>
                <select class="form-select" id="Element" name="Element" required>
                    <option value="">-- Select Element --</option>
                    @foreach (var element in Enum.GetValues(typeof(DestinyLoadoutManager.Models.ElementType)))
                    {
                        <option value="@element">@element</option>
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="Slot">Slot</label>
                <select class="form-select" id="Slot" name="Slot" required>
                    <option value="">-- Select Slot --</option>
                    @foreach (var slot in Enum.GetValues(typeof(DestinyLoadoutManager.Models.EquipSlot)))
                    {
                        <option value="@slot">@slot</option>
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="AmmoType">Ammo Type</label>
                <select class="form-select" id="AmmoType" name="AmmoType" required>
                    <option value="">-- Select Ammo Type --</option>
                    @foreach (var ammo in Enum.GetValues(typeof(DestinyLoadoutManager.Models.AmmoType)))
                    {
                        <option value="@ammo">@ammo</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Create Weapon</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
